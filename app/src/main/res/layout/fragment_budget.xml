<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget Goals"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set and track your spending limits"
        android:textSize="14sp"
        android:textColor="@color/textSecondary"
        android:layout_marginBottom="16dp" />

    <!-- Add Budget Form -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBudgetForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/layoutBudgetFormHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvBudgetFormTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add Budget"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <ImageView
                    android:id="@+id/ivCollapseForm"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/arrow_up_float"
                    android:contentDescription="Toggle form"
                    android:padding="4dp"
                    app:tint="@color/colorPrimary"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBudgetFormContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Category"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <Spinner
                        android:id="@+id/spBudgetCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Budget Limit ($)"
                    app:helperText="Set your spending limit"
                    app:helperTextTextColor="@color/textSecondary"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBudgetLimit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/textPrimary" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Period"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="12dp">

                    <Spinner
                        android:id="@+id/spBudgetPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alert Threshold (%)"
                    app:helperText="Get notified when limit reached"
                    app:helperTextTextColor="@color/textSecondary"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAlertThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="50"
                        android:textColor="@color/textPrimary" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddBudget"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ADD BUDGET"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginTop="16dp"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Search and Filter Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBudgetFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search by category"
                app:boxStrokeColor="@color/colorPrimary"
                app:hintTextColor="@color/colorPrimary"
                app:startIconDrawable="@android:drawable/ic_menu_search"
                app:startIconTint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBudgetSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/textPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Filter Toggle -->
            <LinearLayout
                android:id="@+id/layoutFilterToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filters &amp; Sorting"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"/>

                <ImageView
                    android:id="@+id/ivExpandFilters"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:contentDescription="Toggle filters"
                    app:tint="@color/colorPrimary"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Expandable Filter Options -->
            <LinearLayout
                android:id="@+id/layoutFilterOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="12dp">

                <!-- Period Filter -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter by Period"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPeriodAll"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPeriodDaily"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPeriodWeekly"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPeriodMonthly"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly" />
                </com.google.android.material.chip.ChipGroup>

                <!-- Sorting -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort By"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupSort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSortCategory"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSortLimitDesc"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limit ↓" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSortLimitAsc"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limit ↑" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSortUsage"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usage %" />
                </com.google.android.material.chip.ChipGroup>

                <!-- Show Alerts Only -->
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbShowAlertsOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show only budgets with alerts"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp" />

                <!-- Clear Filters Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearFilters"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear Filters"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Results count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvResultsCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Budgets"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"/>

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long press to delete"
            android:textSize="11sp"
            android:textColor="@color/textSecondary" />
    </LinearLayout>

    <!-- Empty State -->
    <TextView
        android:id="@+id/tvEmptyBudgets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No budgets set yet.\nCreate your first budget above!"
        android:textAlignment="center"
        android:textColor="@color/textSecondary"
        android:textSize="14sp"
        android:padding="32dp"
        android:visibility="gone" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBudgets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
